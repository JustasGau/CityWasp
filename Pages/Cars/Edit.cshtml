@page "{id:int}"
@model CityWasp.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Redaguoti</h1>

<h4>Car</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Car.id" />
            <div class="form-group">
                <label asp-for="Car.model" class="control-label"></label>
                <input asp-for="Car.model" class="form-control" />
                <span asp-validation-for="Car.model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.manufacturer" class="control-label"></label>
                <input asp-for="Car.manufacturer" class="form-control" />
                <span asp-validation-for="Car.manufacturer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.coordinates" class="control-label"></label>
                <input asp-for="Car.coordinates" class="form-control" />
                <span asp-validation-for="Car.coordinates" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.mileage" class="control-label"></label>
                <input asp-for="Car.mileage" class="form-control" />
                <span asp-validation-for="Car.mileage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.techincal" class="control-label"></label>
                <input asp-for="Car.techincal" class="form-control" />
                <span asp-validation-for="Car.techincal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.value" class="control-label"></label>
                <input asp-for="Car.value" class="form-control" />
                <span asp-validation-for="Car.value" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.currentValue" class="control-label"></label>
                <input asp-for="Car.currentValue" class="form-control" />
                <span asp-validation-for="Car.currentValue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.state" class="control-label"></label>
                <select asp-for="Car.state" class="form-control" asp-items="@Html.GetEnumSelectList<Models.Car.CarState>()"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Į sąrašą</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
