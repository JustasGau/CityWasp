@page
@model CityWasp.Pages.Discounts.CreateModel

@{
    ViewData["Title"] = "Kurti";
}

<h1>Pridėti nuolaidą prie sąrašo</h1>

<h4>Nuolaida:</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group"> 
                <label asp-for="Discount.percent" class="control-label"></label>
                <input asp-for="Discount.percent" class="form-control" />
                <span asp-validation-for="Discount.percent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Discount.startDate" class="control-label"></label>
                <input asp-for="Discount.startDate" class="form-control" />
                <span asp-validation-for="Discount.startDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Discount.endDate" class="control-label"></label>
                <input asp-for="Discount.endDate" class="form-control" />
                <span asp-validation-for="Discount.endDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Discount.code" class="control-label"></label>
                <input asp-for="Discount.code" class="form-control" />
                <span asp-validation-for="Discount.code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Pridėti" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Į sąrašą</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
