@page
@model CityWasp.LocationFormViewModel
@{
    ViewData["Title"] = "LocationFormView";
}

<h1>LocationFormView</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                     <select class="form-control" asp-for="@Model.SelectedOptionsIds" name="coordinates" asp-items="Model.Options"></select>
            <div class="form-group">
                <input type="submit" value="Ieskoti" asp-page-handler="FindLocation"  class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>